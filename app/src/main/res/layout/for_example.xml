<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edt_no1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/button_iteh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PRINT ITECH N TIMES" />

        <Button
            android:id="@+id/button_print1ton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PRINT  1 TO N NOS" />

        <Button
            android:id="@+id/button_oddno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PRINT ODD NO" />

        <Button
            android:id="@+id/button_evenno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PRINT EVEN NO" />

        <Button
            android:id="@+id/button_sum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FIND SUM 1 TO N" />

        <Button
            android:id="@+id/button_fact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FIND A FACTORIAL" />

        <Button
            android:id="@+id/button_multi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FIND MULTIPLICATION" />

        <TextView
            android:id="@+id/txtres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

    </LinearLayout>
</ScrollView>